<h1>Order Products</h1>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
{{!-- Create a table --}}
<table id="order_products-table" border="1">

  {{! Header section }}
  <thead>
    <tr>
      {{#each data.[0]}}
      <th>
        {{@key}}
      </th>
      {{/each}}
      <th>delete</th>
    </tr>
  </thead>

  {{!-- Body section --}}
  <tbody>
    {{#each data}}
    <tr>
      <td>{{this.orderID}}</td>
      <td>{{this.productID}}</td>
      <td>{{this.quantity}}</td>
      <td>{{this.price}}</td>
      
      <td><button onclick="deleteOrder_Product({{this.orderID}})">Delete</button></td>
    </tr>
    {{/each}}
  </tbody>
</table>
<script src="./js/delete_order_product.js"></script>


<h2>Search Orders by Product ID</h2>
<form id="search-order_product-html" method='GET' action='/order_products'>
    <label for="input-productID">Search by Product ID: </label>
    <input type="text" name="productID" id="input-productID-html-search">
    
    <input type="submit">
    <a href='/order_products'><button>Reset</button></a>
</form>
<p>Search by Product ID using the field above.</p>

