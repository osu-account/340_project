<h2>Update a Product Order</h2>
<form id="update-order_product-form-ajax">

  <label for="input-orderID">Order ID #: </label>
  <select name="input-orderID" id="mySelect">
    <option value="test">Select an Order ID</option>
    {{#each data}}
      <option value="{{this.orderID}}">{{this.orderID}}</option>
    {{/each}}
  </select>

  <label for="input-quantity">Quantity: </label>
  <input type="text" name="input-quantity" id="input-quantity-update">

  <input type="submit">

</form>
