<h1>Orders</h1>
{{!-- Create a table --}}
<table id="orders-table" border="1">

  {{! Header section }}
  <thead>
    <tr>
      {{#each data.[0]}}
      <th>
        {{@key}}
      </th>
      {{/each}}
      <th>delete</th>
    </tr>
  </thead>

  {{!-- Body section --}}
  <tbody>
    {{#each data}}
    <tr>
      <td>{{this.orderID}}</td>
      <td>{{this.customerID}}</td>
      <td>{{this.orderDate}}</td>
      <td>{{this.total}}</td>
      
      <td><button onclick="deleteOrder({{this.orderID}})">Delete</button></td>
    </tr>
    {{/each}}
  </tbody>
</table>
<script src="./js/delete_order.js"></script>


<h2>Search Orders</h2>
<form id="search-order-html" method='GET' action='/orders'>
    <label for="input-orderDate">Search by Order Date: </label>
    <input type="text" name="orderDate" id="input-orderDate-html-search">
    
    <input type="submit">
    <a href='/orders'><button>Reset</button></a>
</form>
<p>Search by order date in the form yyyy-mm-dd.</p>

