<h2>Update Inventory In-Stock Quantity for a Product</h2>
<form id="update-inventory-form-ajax">

  <label for="input-inventoryID">Inventory ID #: </label>
  <select name="input-inventoryID" id="mySelect">
    <option value="test">Select an Inventory ID</option>
    {{#each data}}
      <option value="{{this.inventoryID}}">{{this.inventoryID}}</option>
    {{/each}}
  </select>

  <label for="input-inStockQuantity">Quantity: </label>
  <input type="text" name="input-inStockQuantity" id="input-inStockQuantity-update">

  <input type="submit">

</form>
<script src="./js/update_inventory.js"></script>
