<h1>Inventory</h1>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
{{!-- Create a table --}}
<table id="inventory-table" border="1">

  {{! Header section }}
  <thead>
    <tr>
      {{#each data.[0]}}
      <th>
        {{@key}}
      </th>
      {{/each}}
      <th>delete</th>
    </tr>
  </thead>

  {{!-- Body section --}}
  <tbody>
    {{#each data}}
    <tr>
      <td>{{this.inventoryID}}</td>
      <td>{{this.productID}}</td>
      <td>{{this.locationID}}</td>
      <td>{{this.inStockQuantity}}</td>
      
      <td><button onclick="deleteInventory({{this.inventoryID}})">Delete</button></td>
    </tr>
    {{/each}}
  </tbody>
</table>
<script src="./js/delete_inventory.js"></script>


<h2>Search Inventory by Product ID</h2>
<form id="search-inventory-html" method='GET' action='/inventory'>
    <label for="input-productID">Search by Product ID: </label>
    <input type="text" name="productID" id="input-productID-html-search">
    
    <input type="submit">
    <a href='/inventory'><button>Reset</button></a>
</form>
<p>Search by product ID using the field above.</p>


